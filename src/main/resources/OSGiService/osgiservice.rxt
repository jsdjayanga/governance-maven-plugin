<artifactType type="application/vnd.wso2-osgiservice+xml" shortName="osgiservice" singularLabel="OSGiService" pluralLabel="OSGiServices"
              hasNamespace="false" iconSet="27">
    <storagePath>/trunk/osgiservices/@{namespace}/@{name}</storagePath>
    <nameAttribute>overview_name</nameAttribute>
    <namespaceAttribute>overview_namespace</namespaceAttribute>
    <lifecycle>OSGiServiceLifeCycle</lifecycle>
    <ui>
        <list>
            <column name="Name">
                <data type="text" value="overview_name"/>
            </column>
            <column name="Version">
                <data type="path" value="overview_version" href="@{storagePath}"/>
            </column>
            <column name="Namespace">
                <data type="text" value="overview_namespace"/>
            </column>
        </list>
    </ui>
    <content>
        <table name="Overview">
            <field type="text" required="true">
                <name>Provider</name>
            </field>
            <field type="text" required="true" readonly="true">
                <name label="Name">Name</name>
            </field>
            <field type="text" required="true" readonly="true">
                <name label="Namespace">Namespace</name>
            </field>
            <field type="text">
                <name label="Version">Version</name>
            </field>
            <field type="text-area">
                <name label="Description">Description</name>
            </field>
        </table>
        <table name="Images">
            <field type="text" required="true">
                <name>Thumbnail</name>
            </field>
            <field type="text" required="true">
                <name>Banner</name>
            </field>
        </table>
        <table name="Exports" columns="1" maxoccurs="unbounded">
            <subheading>
                <heading>Component Name</heading>
            </subheading>
            <field type="text">
                <name label="Component Name">Component Name</name>
            </field>
        </table>
        <table name="Imports" columns="2" maxoccurs="unbounded">
            <subheading>
                <heading>Reference Name</heading>
                <heading>Interface</heading>
            </subheading>
            <field type="text">
                <name label="Reference Name">Reference Name</name>
            </field>
            <field type="text">
                <name label="Interface">Interface</name>
            </field>
        </table>
    </content>
</artifactType>
